{
  "name": "shared-kernel",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared-kernel/src",
  "projectType": "library",
  "tags": ["scope:shared-kernel"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared-kernel",
        "tsConfig": "libs/shared-kernel/tsconfig.lib.json",
        "main": "libs/shared-kernel/src/index.ts"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/libs/shared-kernel"],
      "options": {
        "command": "vitest run --config libs/shared-kernel/vitest.config.ts",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
