{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@workalaya/shared-kernel": ["libs/shared-kernel/src/index.ts"],
      "@workalaya/api-contracts": ["libs/api-contracts/src/index.ts"],
      "@workalaya/testing": ["libs/testing/src/index.ts"],
      "@workalaya/config": ["libs/config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
