{
  "name": "worker",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/worker/src",
  "projectType": "application",
  "tags": ["scope:worker"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/worker",
        "tsConfig": "apps/worker/tsconfig.app.json",
        "main": "apps/worker/src/main.ts"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "worker:build"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/apps/worker"],
      "options": {
        "command": "vitest run --config apps/worker/vitest.config.ts",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
